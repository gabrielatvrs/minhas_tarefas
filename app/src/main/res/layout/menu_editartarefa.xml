<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_menu"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="170dp"
            android:layout_height="10dp"
            android:background="@drawable/arrastavel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título Tarefa"
                android:layout_marginTop="64dp"
                android:gravity="start"
                android:textSize="24dp"
                android:textColor="@color/corTexto"
                android:drawableRight="@drawable/ic_editar"
                android:drawablePadding="23dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A fazer"
                android:textStyle="bold"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/corTexto"
                android:layout_marginBottom="28dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título da tarefa"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"
                android:background="@color/corInputs"
                android:paddingTop="16dp"
                android:paddingBottom="19dp"
                android:paddingStart="16dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição da tarefa"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@color/corInputs"
                android:paddingTop="16dp"
                android:paddingBottom="98dp"
                android:paddingStart="16dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opcional"
                android:textSize="12sp"
                android:paddingBottom="200dp"/>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir tarefa"
            android:textSize="18dp"
            android:textColor="@color/corBotao"
            android:background="#FFF"
            android:drawableLeft="@drawable/ic_excluir"
            android:drawablePadding="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnIniciar"
            android:layout_marginBottom="45dp"
            />
    <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_botao"
            android:text="Iniciar tarefa"
            android:textSize="18dp"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>